    <DataAnnotationsValidator />
    <div class="form-group">
        <label>Description:</label>
        <div>
            <InputText @bind-Value="@TimeLimit.Description" />
            <ValidationMessage For="@(() => TimeLimit!.Description)" />
        </div>
    </div>
    <div class="form-group">
        <div>
            <label>Priority:</label>
            <div>
                <InputNumber @bind-Value="@TimeLimit.Priority"/>
                <ValidationMessage For="@(() => TimeLimit!.Priority)"/>
            </div>
        </div>
    </div>
